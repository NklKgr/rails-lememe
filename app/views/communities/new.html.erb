<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 community-form">
      <h1 class="text-center mb-4">Create a New Community</h1>

      <%= simple_form_for @community, html: { class: 'my-form' } do |form| %>
        <div class="form-group">
          <%= form.label :name, "Name" %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description, "Description" %>
          <%= form.text_area :description, class: 'form-control', rows: 4 %>
        </div>

        <%= form.button :submit, "Create Community", class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>
